
<%= form_for [user, user.items.new ] do |f| %>
<div class="row">
  <div class='form-group'>
    <%= f.label :Item %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'You can do it!' %>
</div>
  <div class='form-group'>
    <%= f.submit 'Save', class: 'btn btn-success blue', remote: true %>
  </div>
<% end %>
