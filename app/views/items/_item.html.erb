<!-- list items here -->

<div id=<%="item-#{item.id}"%> class="item list-group-item">
  
  <button type="button" class="btn btn-default btn-lg display-inline-right">
    <%= link_to item.name, user_item_path(@user.id, item.id), method: :delete %>
  </button>
  submitted <%= time_ago_in_words(item.created_at) %> ago,
  Time left <%= distance_of_time_in_words(Time.now, item.created_at + 5.minutes, include_seconds: true)%>
</div>
